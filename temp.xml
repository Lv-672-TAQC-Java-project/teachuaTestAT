<suite name="TeachUA Functional Test Suite">
    <test name="Sing Up functionality">
        <classes>
            <class name="com.ita.edu.teachua.ui.tests.SingUpTest"/>
        </classes>
    </test>

    <test name="Search functionality">
        <classes>
            <class name="com.ita.edu.teachua.ui.tests.SearchFieldTest"/>
        </classes>
    </test>

    <test name="User functionality">
        <classes>
            <class name="com.ita.edu.teachua.api.UserTest"/>
            <methods>
                <include name="verifyThatUserCanNotSaveChangesWhereEnterInvalidDataInFieldPhone"/>
            </methods>
        </classes>
    </test>

    <test name="Task functionality">
        <classes>
            <class name="com.ita.edu.teachua.api.TaskTest"/>
            <methods>
                <include name="verifyThatUserCanCreateNewClubUsingSpacesAsValues"/>
            </methods>
        </classes>
    </test>

    <test name="Club functionality">
        <classes>
            <class name="com.ita.edu.teachua.api.ClubTest"/>
            <methods>
                <include name="verifyThatUserCannotCreateNewClubIsInACenterIfNameFieldContainMoreThan100Characters"/>
            </methods>
        </classes>
    </test>

    <test name="Challenge functionality">
        <classes>
            <class name="com.ita.edu.teachua.api.ChallengeTest"/>
            <methods>
                <include name="verifyThatUserIsNotAbleToDeleteChallengeUsingNonAdministratorRights"/>
            </methods>
        </classes>
    </test>
</suite>
